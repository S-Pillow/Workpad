<UserControl x:Class="WorkNotes.Controls.SplitViewContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:WorkNotes.Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Pane (Primary) -->
        <controls:EditorPane x:Name="TopPane" 
                             Grid.Row="0"
                             PaneId="Top"/>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="1"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="{DynamicResource App.Border}"
                      ResizeBehavior="PreviousAndNext"/>

        <!-- Bottom Pane (Secondary) -->
        <controls:EditorPane x:Name="BottomPane" 
                             Grid.Row="2"
                             PaneId="Bottom"/>
    </Grid>
</UserControl>
