<Window x:Class="WorkNotes.Dialogs.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find and Replace"
        Height="280"
        Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource App.Background}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Find What -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Find what:" VerticalAlignment="Center" 
                      Foreground="{DynamicResource App.TextPrimary}"/>
            <TextBox x:Name="FindTextBox" Grid.Column="1" Height="28" 
                    Background="{DynamicResource App.Surface2}"
                    Foreground="{DynamicResource App.TextPrimary}"
                    BorderBrush="{DynamicResource App.Border}"
                    Padding="6,4"/>
        </Grid>

        <!-- Replace With -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Replace with:" VerticalAlignment="Center"
                      Foreground="{DynamicResource App.TextPrimary}"/>
            <TextBox x:Name="ReplaceTextBox" Grid.Column="1" Height="28"
                    Background="{DynamicResource App.Surface2}"
                    Foreground="{DynamicResource App.TextPrimary}"
                    BorderBrush="{DynamicResource App.Border}"
                    Padding="6,4"/>
        </Grid>

        <!-- Options -->
        <StackPanel Grid.Row="3" Margin="0,0,0,0">
            <CheckBox x:Name="MatchCaseCheckBox" Content="Match case" Margin="0,0,0,8"
                     Foreground="{DynamicResource App.TextPrimary}"/>
            <CheckBox x:Name="WholeWordCheckBox" Content="Match whole word only" Margin="0,0,0,8"
                     Foreground="{DynamicResource App.TextPrimary}"/>
            <CheckBox x:Name="WrapAroundCheckBox" Content="Wrap around" IsChecked="True"
                     Foreground="{DynamicResource App.TextPrimary}"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" Content="Find Next" Click="FindNext_Click" 
                   Width="105" Height="32" Margin="0,0,8,0"/>
            <Button Grid.Column="2" Content="Find Previous" Click="FindPrevious_Click" 
                   Width="115" Height="32" Margin="0,0,8,0"/>
            <Button Grid.Column="3" Content="Replace" Click="Replace_Click" 
                   Width="85" Height="32" Margin="0,0,8,0"/>
            <Button Grid.Column="4" Content="Replace All" Click="ReplaceAll_Click" 
                   Width="105" Height="32" Margin="0,0,8,0"
                   Background="{DynamicResource App.Accent}" 
                   Foreground="White" 
                   FontWeight="SemiBold"/>
            <Button Grid.Column="5" Content="Close" Click="Close_Click" IsCancel="True"
                   Width="85" Height="32"/>
        </Grid>
    </Grid>
</Window>
