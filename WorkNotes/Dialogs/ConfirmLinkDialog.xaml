<Window x:Class="WorkNotes.Dialogs.ConfirmLinkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open link?"
        Height="280"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message -->
        <TextBlock Grid.Row="0" 
                   Text="You're about to open:"
                   FontSize="14"
                   Margin="0,0,0,12"/>

        <!-- URL Display (selectable/copyable) -->
        <TextBox x:Name="UrlTextBox"
                 Grid.Row="1"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 Padding="8"
                 Margin="0,0,0,12"
                 FontFamily="Consolas"
                 FontSize="12"
                 Background="{DynamicResource App.Surface2}"
                 BorderBrush="{DynamicResource App.Border}"
                 BorderThickness="1"
                 VerticalScrollBarVisibility="Auto"
                 MaxHeight="80"/>

        <!-- Domain Display -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Domain: " 
                       Foreground="{DynamicResource App.TextSecondary}"
                       FontSize="13"/>
            <TextBlock x:Name="DomainTextBlock"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Foreground="{DynamicResource App.TextPrimary}"/>
        </StackPanel>

        <!-- Warning (if any) -->
        <StackPanel x:Name="WarningPanel" 
                    Grid.Row="3" 
                    Orientation="Horizontal" 
                    Visibility="Collapsed"
                    Margin="0,0,0,8">
            <TextBlock Text="⚠️ " 
                       FontSize="14"
                       Foreground="Orange"/>
            <TextBlock x:Name="WarningTextBlock"
                       FontSize="13"
                       Foreground="Orange"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Don't ask again checkbox -->
            <CheckBox x:Name="DontAskAgainCheckBox"
                      Grid.Column="0"
                      Content="Don't ask again"
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource App.TextSecondary}"/>

            <!-- Copy button -->
            <Button Grid.Column="1"
                    Content="Copy"
                    Click="Copy_Click"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"/>

            <!-- Open button -->
            <Button Grid.Column="2"
                    Content="Open"
                    Click="Open_Click"
                    IsDefault="True"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"
                    Background="{DynamicResource App.Accent}"
                    Foreground="White"
                    FontWeight="SemiBold"/>

            <!-- Cancel button -->
            <Button Grid.Column="3"
                    Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Width="80"
                    Height="32"/>
        </Grid>
    </Grid>
</Window>
