<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Windows 11 Light Theme - Semantic Color Tokens -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="App.Background" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="App.Surface" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.Surface2" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="App.Border" Color="#E0E0E0"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="App.TextPrimary" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.TextSecondary" Color="#605E5C"/>
    <SolidColorBrush x:Key="App.TextDisabled" Color="#A19F9D"/>
    
    <!-- Accent Colors (Windows 11 Blue) -->
    <SolidColorBrush x:Key="App.Accent" Color="#0078D4"/>
    <SolidColorBrush x:Key="App.AccentText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.Hover" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="App.Pressed" Color="#EBEBEB"/>
    <SolidColorBrush x:Key="App.Selected" Color="#E5F3FF"/>
    
    <!-- Icon Colors -->
    <SolidColorBrush x:Key="App.IconPrimary" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.IconSecondary" Color="#605E5C"/>
    
    <!-- Menu Specific -->
    <SolidColorBrush x:Key="App.MenuBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.MenuText" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.MenuHover" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="App.MenuPressed" Color="#EBEBEB"/>
    
    <!-- StatusBar Specific -->
    <SolidColorBrush x:Key="App.StatusBackground" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="App.StatusText" Color="#605E5C"/>
    
    <!-- Editor Specific -->
    <SolidColorBrush x:Key="App.EditorBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.EditorForeground" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.EditorLineNumbersForeground" Color="#605E5C"/>
    <SolidColorBrush x:Key="App.EditorSelection" Color="#ADD6FF"/>
    <SolidColorBrush x:Key="App.EditorSelectionBorder" Color="#ADD6FF"/>
    
    <!-- Controls (ComboBox, TextBox, etc.) -->
    <SolidColorBrush x:Key="App.ControlBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.ControlForeground" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.ControlBorder" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="App.ControlHoverBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="App.ControlSelectedBackground" Color="#E5F3FF"/>
    
    <!-- Popup (ComboBox dropdown, context menus) -->
    <SolidColorBrush x:Key="App.PopupBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.PopupBorder" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="App.PopupShadow" Color="#000000"/>
    <sys:Double x:Key="App.PopupShadowOpacity">0.2</sys:Double>

    <!-- ToolTip -->
    <SolidColorBrush x:Key="App.TooltipBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.TooltipForeground" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.TooltipBorder" Color="#E0E0E0"/>

    <!-- ScrollBar -->
    <SolidColorBrush x:Key="App.ScrollBarTrack" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="App.ScrollBarThumb" Color="#CDCDCD"/>
    <SolidColorBrush x:Key="App.ScrollBarThumbHover" Color="#A6A6A6"/>
    <SolidColorBrush x:Key="App.ScrollBarThumbPressed" Color="#8A8A8A"/>

    <!-- CheckBox / RadioButton indicator -->
    <SolidColorBrush x:Key="App.CheckBoxBorder" Color="#8A8A8A"/>
    <SolidColorBrush x:Key="App.CheckBoxBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.CheckBoxCheckedBackground" Color="#0078D4"/>
    <SolidColorBrush x:Key="App.CheckBoxGlyph" Color="#FFFFFF"/>

    <!-- Title Bar / Caption Buttons -->
    <SolidColorBrush x:Key="App.TitleBarBackground" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="App.TitleBarForeground" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.TitleBarInactiveForeground" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="App.CaptionButtonHover" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="App.CaptionButtonPressed" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="App.CaptionButtonForeground" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="App.CaptionCloseHover" Color="#C42B1C"/>
    <SolidColorBrush x:Key="App.CaptionClosePressed" Color="#B22A1C"/>
    <SolidColorBrush x:Key="App.CaptionCloseForegroundHover" Color="#FFFFFF"/>

</ResourceDictionary>
