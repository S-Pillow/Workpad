<Application x:Class="WorkNotes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Converters must load before styles that reference them -->
                <ResourceDictionary Source="Resources/Converters.xaml"/>
                <!-- Theme dictionary loaded dynamically at startup -->
                <!-- Styles applied after theme for proper inheritance -->
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
